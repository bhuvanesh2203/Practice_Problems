package Javain;

import java.util.Iterator;

public class Treepattern {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
        for(int i=1;i<=3;i++) {
        	for(int k=3;k>=i;k--) {
        		System.out.print(" ");
        	}
        	for(int m=0;m<=i;m++) {
        		System.out.print("*");
        	}
        	System.out.println();
        }
	}

}
